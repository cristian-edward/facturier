{% extends 'base.html.twig' %}
{% block submenu %}
<ul class="nav nav-sidebar">
	<li><a href="{{ path('partner_new') }}">Add new</a></li>
	<li><a href="{{ path('partner_index') }}">List</a></li>
</ul>
{% endblock %}

{% block body %}
	<h1>Partner edit</h1>

	{{ form_start(edit_form, {'attr': {'class': 'form-horizontal'}}) }}

		<div class="form-group">
			{{ form_label(edit_form.name, 'Name', {'label_attr': {'class': 'col-md-1 col-sm-2 control-label'}}) }}
			<div class="col-md-3 col-sm-4">
				{{ form_widget(edit_form.name, {'attr': {'class': 'form-control'}}) }}
			</div>
			{{ form_errors(edit_form.name) }}
		</div>

		<div class="form-group">
			{{ form_label(edit_form.bank, 'Bank', {'label_attr': {'class': 'col-md-1 col-sm-2 control-label'}}) }}
			<div class="col-md-3 col-sm-4">
				{{ form_widget(edit_form.bank, {'attr': {'class': 'form-control'}}) }}
			</div>
			{{ form_errors(edit_form.bank) }}
		</div>

		<div class="form-group">
			{{ form_label(edit_form.iban, 'Iban', {'label_attr': {'class': 'col-md-1 col-sm-2 control-label'}}) }}
			<div class="col-md-3 col-sm-4">
				{{ form_widget(edit_form.iban, {'attr': {'class': 'form-control'}}) }}
			</div>
			{{ form_errors(edit_form.iban) }}
		</div>

		<div class="form-group">
			{{ form_label(edit_form.addresses, 'Iban', {'label_attr': {'class': 'col-md-1 col-sm-2 control-label'}}) }}
			<div class="col-md-3 col-sm-4">
				{{ form_widget(edit_form.addresses, {'attr': {'class': 'form-control'}}) }}
			</div>
			{{ form_errors(edit_form.addresses) }}
		</div>

	<div class="form-group">
		<div class="col-md-3 col-md-offset-1 col-sm-4 col-sm-offset-2">
			{{ form_widget(edit_form.submit, { 'label': 'Save', 'attr': {'class': 'btn btn-sm btn-success'}}) }}
		</div>
	</div>
	{{ form_end(edit_form) }}

	{{ form_start(delete_form, {'attr': {'class': 'form-horizontal'}}) }}
	<div class="form-group">

		<div class="col-md-3 col-md-offset-1 col-sm-4 col-sm-offset-2">
			{{ form_widget(delete_form.submit, { 'label': 'Delete', 'attr': {'class': 'btn btn-sm btn-danger'}}) }}
		</div>

	</div>
	{{ form_end(delete_form) }}

{% endblock %}