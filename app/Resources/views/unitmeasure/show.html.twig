{% extends 'base.html.twig' %}
{% block submenu %}
    <ul class="nav nav-sidebar">
        <li><a href="{{ path('unitmeasure_new') }}">Add new</a></li>
        <li><a href="{{ path('unitmeasure_index') }}">List</a></li>
        <li><a href="{{ path('unitmeasure_edit', { 'id': unitMeasure.id }) }}">Edit</a></li>
    </ul>
{% endblock %}

{% block body %}
    <h1>UnitMeasure</h1>

<div class="col-lg-4">
    <div class="table-responsive">
        <table class="table table-bordered table-hover record_properties">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ unitMeasure.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ unitMeasure.name }}</td>
                </tr>
                <tr>
                    <th>Datcre</th>
                    <td>{% if unitMeasure.datCre %}{{ unitMeasure.datCre|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Datupd</th>
                    <td>{% if unitMeasure.datUpd %}{{ unitMeasure.datUpd|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
            </tbody>
        </table>
    </div>

    {{ form_start(delete_form) }}
    <div class="row top-buffer">
        <div class="col-md-4 col-sm-4">
            {{ form_widget(delete_form.submit, { 'label': 'Delete', 'attr': {'class': 'btn btn-danger'}}) }}
        </div>
    </div>
    {{ form_end(delete_form) }}
</div>
{% endblock %}
