{% extends 'base.html.twig' %}

{% block body %}
    <h1>Partner creation</h1>
  <div class="row">
      <div class="col-xs-4">
    {{ form_start(form, { 'attr':{ 'role': 'form'} }) }}
    <div class="form-group">    {# Input NAME #}
        {{ form_label(form.name, 'Name', { 'label_attr':{'class': 'col-md-1 col-sm-2 control-label'} } )}}
        {{ form_widget(form.name, { 'attr':{ 'class': 'form-control'} }) }}
    </div>
    <div class="form-group">    {# Input BANK #}
        {{ form_label(form.bank, 'Bank', { 'label_attr':{'class': 'col-md-1 col-sm-2 control-label'} } ) }}
        {{ form_widget(form.bank, { 'attr':{ 'class': 'form-control'} }) }}
    </div>
    <div class="form-group">    {# Input IBAN #}
        {{ form_label(form.iban, 'Iban', { 'label_attr':{'class': 'col-md-1 col-sm-2 control-label'} } ) }}
        {{ form_widget(form.iban, { 'attr':{ 'class': 'form-control'} }) }}
    </div>
    <div class="form-group">    {# Input SUBMIT #}
        <input type="submit" value="Create" class="btn btn-primary"/>
    </div>
    {{ form_end(form) }}
      </div>
  </div>
    <ul>
        <li>
            <a href="{{ path('partner_index') }}">Back to the list</a>
        </li>
    </ul>
            
            
{% endblock %}
