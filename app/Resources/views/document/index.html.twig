{% extends 'document/document_layout.html.twig' %}

{% block submenu %}
    {{ parent() }}
    <ul class="nav nav-sidebar">
        <li><a href="{{ path('document_new') }}">Add new</a></li>
        <li><a href="{{ path('doctype_index') }}">List</a></li>
    </ul>
{% endblock %}
{% block body %}
    <h1>Document list</h1>

    <div class="table-responsive">
        <table class="table table-hover records_list">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Docnumber</th>
                    <th>Datcre</th>
                    <th>Datupd</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for document in documents %}
                <tr>
                    <td><a href="{{ path('document_show', { 'id': document.id }) }}">{{ document.id }}</a></td>
                    <td>{{ document.docNumber }}</td>
                    <td>{% if document.datCre %}{{ document.datCre|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if document.datUpd %}{{ document.datUpd|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('document_show', { 'id': document.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('document_edit', { 'id': document.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
