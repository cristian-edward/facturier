{% extends 'product/product_layout.html.twig' %}
{% form_theme delete_form ':Form:fields.html.twig' %}
{% trans_default_domain 'AppBundle' %}

{% block submenu %}
    {{ parent() }}
    <hr />
    <ul class="nav nav-sidebar">
        <li><a href="{{ path('featurename_new') }}">{% trans %}Add new{% endtrans %}</a></li>
        <li><a href="{{ path('featurename_index') }}">{% trans %}List{% endtrans %}</a></li>
        <li><a href="{{ path('featurename_edit', {'id':featureName.id}) }}">{% trans %}Edit{% endtrans %}</a></li>
    </ul>
{% endblock %}
{% block body %}
    <h1>Feature Name</h1>

<div class="col-lg-4">
    <div class="table-responsive">   
        <table class="table table-bordered table-hover record_properties">
        <tbody>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <td>{{ featureName.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Feature name en{% endtrans %}</th>
                <td>{{ featureName.en }}</td>
            </tr>
            <tr>
                <th>{% trans %}Feature name ro{% endtrans %}</th>
                <td>{{ featureName.ro }}</td>
            </tr>      
            <tr>
                <th>{% trans %}Feature name bg{% endtrans %}</th>
                <td>{{ featureName.bg }}</td>
            </tr>            
            <tr>
                <th>{% trans %}Creation date{% endtrans %}</th>
                <td>{% if featureName.datCre %}{{ featureName.datCre|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>{% trans %}Update date{% endtrans %}</th>
                <td>{% if featureName.datUpd %}{{ featureName.datUpd|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
    </div>


        {{ form_start(delete_form) }}

           {{ form_widget(delete_form) }}

        {{ form_end(delete_form) }}

</div> 


{% endblock %}
