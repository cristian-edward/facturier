{% extends 'base.html.twig' %}
{% form_theme edit_form ':Form:filds.html.twig' %}

{% block submenu %}
    <ul class="nav nav-sidebar">
        <li><a href="{{ path('product_new') }}">Add new</a></li>
        <li><a href="{{ path('product_index') }}">List</a></li>
    </ul>
{% endblock %}
{% block body -%}

    <h3>Product editing</h3>

    {{ form_start(edit_form, { 'attr': { 'role':'form', 'class':'form-horizontal' }}) }}
    {{ form_errors(edit_form) }}
    <div class="row">
        <div class="col-lg-4">
            <div class="form-group">
                {{ form_label(edit_form.nume, 'Nume', {'label_attr': {'class': 'col-lg-4 control-label'}}) }}
                {{ form_errors(edit_form.nume) }}
                <div class="col-lg-8">
                    {{ form_widget(edit_form.nume, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(edit_form.unitMeasure, 'Unitate de masura', {'label_attr': {'class': 'col-lg-4 control-label'}}) }}
                {{ form_errors(edit_form.unitMeasure) }}
                <div class="col-lg-8">
                    {{ form_widget(edit_form.unitMeasure, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(edit_form.manufacturer, 'Manufacturer', {'label_attr': {'class': 'col-lg-4 control-label'}}) }}
                {{ form_errors(edit_form.manufacturer) }}
                <div class="col-lg-8">
                    {{ form_widget(edit_form.manufacturer, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(edit_form.ean, 'Ean', {'label_attr': {'class': 'col-lg-4 control-label'}}) }}
                {{ form_errors(edit_form.ean) }}
                <div class="col-lg-8">
                    {{ form_widget(edit_form.ean, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(edit_form.reference, 'Reference', {'label_attr': {'class': 'col-lg-4 control-label'}}) }}
                {{ form_errors(edit_form.reference) }}
                <div class="col-lg-8">
                    {{ form_widget(edit_form.reference, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(edit_form.salePrice, 'Sale price', {'label_attr': {'class': 'col-lg-4 control-label'}}) }}
                {{ form_errors(edit_form.salePrice) }}
                <div class="col-lg-8">
                    {{ form_widget(edit_form.salePrice, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(edit_form.categories, 'Categories', {'label_attr': {'class': 'col-lg-4 control-label'}}) }}
                {{ form_errors(edit_form.categories) }}
                <div class="col-lg-8">
                    {{ form_widget(edit_form.categories, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-11">
            <div class="form-group">
                <div class="wrap-playvideos">
                    <h3>Product features</h3>
                    <ul class="features" data-prototype="{{ form_widget(edit_form.features.vars.prototype)|e }}">
                        {% for feature in edit_form.features %}
                            <li>{{ form_widget(feature) }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">
            <div class="form-group">

                <div class="wrap-playvideos">

                    <h3>Product images</h3>
                    {#<ul class="images" data-prototype="{{ form_widget(edit_form.images.vars.prototype)|e }}">#}

                        {#{% for image in edit_form.images %}#}
                            {#<li>{{ form_widget(image) }}</li>#}
                        {#{% endfor %}#}
                    {#</ul>#}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">
            <div class="form-group">
                <div class="col-md-3 col-md-offset-1 col-sm-4 col-sm-offset-2">
                    {{ form_widget(edit_form.submit, { 'label': 'Add', 'attr': {'class': 'btn btn-sm btn-success'}}) }}
                </div>
            </div>
        </div>
    </div>

    {{ form_end(edit_form) }}

{% endblock %}
